<Window x:Class="FryzjerWpfApp.KlienciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FryzjerWpfApp"
        mc:Ignorable="d"
        Title="KlienciWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="klienciGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,42" AutoGeneratingColumn="klienciGrid_AutoGeneratingColumn"/>
        <Button x:Name="usunBtn" Content="Usuń" HorizontalAlignment="Left" Margin="750,397,0,0" VerticalAlignment="Top" Click="usunBtn_Click"/>
        <Button x:Name="dodajBtn" Content="Dodaj" HorizontalAlignment="Left" Margin="705,397,0,0" VerticalAlignment="Top" Click="dodajBtn_Click"/>

    </Grid>
</Window>
